<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Best</th>
      <th>Worst</th>
      <th>Recommendation</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.grade %></td>
        <td><%= vote.best %></td>
        <td><%= vote.worst %></td>
        <td><%= vote.recommendation %></td>
        <td><%= vote.comment %></td>
        <td><%= link_to 'Show', user_vote_path(vote) %></td>
        <td><%= link_to 'Edit', edit_user_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', user_vote_path(vote), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_user_vote_path %>
