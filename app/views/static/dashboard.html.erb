<h3>Allgemeine Zufriedenheit bei <%= current_user.company %></h3>
<table class="table">
  <thead>
    <tr>
      <th><%= t('vote.grade', company: current_user.company) %></th>
      <th><%= t('vote.best_html') %></th>
      <th><%= t('vote.worst_html') %></th>
      <th><%= t('vote.recommendation') %></th>
      <th><%= t('vote.comment') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @company_votes.each do |vote| %>
      <tr <%== "class=\"danger\"" if vote.grade >4 %>>
        <td><%= vote.grade %></td>
        <td><%= vote.best %></td>
        <td><%= vote.worst %></td>
        <td><%= vote.recommendation %></td>
        <td><%= vote.comment %></td>
        <td><%= render partial: "layouts/colleague", collection: [vote.user], as: :colleague %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Ihre Einträge</h3>
<table class="table">
  <thead>
    <tr>
      <th><%= t('vote.grade', company: current_user.company) %></th>
      <th><%= t('vote.best_html') %></th>
      <th><%= t('vote.worst_html') %></th>
      <th><%= t('vote.recommendation') %></th>
      <th><%= t('vote.comment') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr <%== "class=\"danger\"" if vote.grade >4 %>>
        <td><%= vote.grade %></td>
        <td><%= vote.best %></td>
        <td><%= vote.worst %></td>
        <td><%= vote.recommendation %></td>
        <td><%= vote.comment %></td>
        <td>
          <!-- Single button -->
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
              Bearbeiten <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Bearbeiten', edit_user_vote_path(vote) %></li>
              <li>
                <%= link_to 'Löschen', user_vote_path(vote), method: :delete,
                  data: { confirm: 'Sind Sie sicher?' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
